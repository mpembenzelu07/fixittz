    // Form submission (simple alert + WhatsApp redirect – perfect for TZ)
    document.getElementById('contactForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const phone = this[1].value.trim();
      const msg = encodeURIComponent(`Habari! Nataka huduma ya \( {this[3].value} - \){this[2].value}`);
      window.open(`https://wa.me/255768000111?text=${msg}`, '_blank');
      alert('Asante! Ombi lako limetumwa kwa WhatsApp. Tutakujibu mara moja!');
      this.reset();
    });
